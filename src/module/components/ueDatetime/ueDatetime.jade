div(ng-class="{'field-wrapper row':!vm.options.filter}")
    include ../../template/labelField/labelField
    div(ng-class="{'filter-inner-wrapper': vm.options.filter, 'field-element': !vm.options.filter}"  ng-style="{'overflow:auto':vm.multiple}")  
        div(data-ng-if="vm.multiple", ng-class="{'col-lg-2 col-md-2 col-sm-3 col-xs-3': !vm.options.isGroup}")
            .item-datepicker-wrapper.input-group(data-ng-repeat="field_item in vm.fieldValue track by $index")
                input.form-control.input-sm(
                    date-time="",
                    name="{{vm.fieldName}}",
                    data-ng-disabled="vm.readonly",
                    ng-model="vm.fieldValue[$index]",
                    view="date",
                    format="{{vm.format || 'YYYY-MM-DD HH:mm:ss'}}",
                    data-ng-blur="vm.inputLeave(vm.fieldValue[$index])",
                    data-min-date="minDate",
                    data-max-date="maxDate"
                    )
                span.input-group-btn
                    button.btn.btn-default.btn-sm(data-ng-click="vm.removeItem($index)", data-ng-if="!vm.readonly") x
            .btn.btn-primary.btn-sm(data-ng-click="vm.addItem()", data-ng-disabled="vm.readonly") {{'BUTTON.ADD' | translate}}
        div(data-ng-if="!vm.multiple", ng-class="{'col-lg-2 col-md-2 col-sm-3 col-xs-3': !vm.options.isGroup}")
            input.form-control.input-sm(
                date-time="",
                name="{{vm.fieldName}}",
                data-ng-disabled="vm.readonly",
                ng-model="vm.fieldValue",
                view="date",
                format="{{vm.format || 'YYYY-MM-DD HH:mm:ss'}}",
                data-ng-blur="vm.inputLeave(vm.fieldValue)",
                data-min-date="minDate",
                data-max-date="maxDate"
                )
    include ../../template/errorField/errorField