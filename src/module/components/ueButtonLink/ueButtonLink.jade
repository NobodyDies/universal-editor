.ue-button-link-body
    div(data-ng-if="!vm.template")
        button.btn.btn-lg.btn-create.btn-success(data-ng-class="{ processing : vm.options.isLoading}", data-ng-if="vm.setting.buttonClass == 'header'")
            | {{::vm.label}}
            .loader-search-wrapper(data-ng-show="vm.options.isLoading")
                .loader-search {{'LOADING' | translate}}
        button.editor-action-button(data-ng-if="vm.setting.buttonClass == 'context'", ng-click="vm.click()") {{::vm.label}}
    .ue-button-template(data-ng-if="vm.template", on-render-template="")