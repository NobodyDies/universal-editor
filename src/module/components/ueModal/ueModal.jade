div
    .close-editor(data-ng-click="vm.closeButton()", ng-style="{'background-image':'url('+ vm.assetsPath +'/images/close.jpg)'}")
    .ue-modal-header(ng-show="vm.header")
        label(ng-bind="vm.header.label")
    .ue-modal-body(ng-show="vm.body")
        .text(ng-bind="vm.body.text" ng-show="vm.body.text")
        .field-content-wrapper
            field-wrapper(data-setting="vm.body", data-ng-if="vm.body")
    .ue-modal-footer(data-ng-show="vm.footer")
        field-wrapper.editor-action-button(data-ng-repeat="button in vm.footer track by $index", data-setting="button")
