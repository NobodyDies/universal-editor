div(ng-class="{'field-wrapper row':!vm.options.filter, 'filter-wrapper-field': vm.options.filter}")
    //-- with templates
    .component-template(
        on-render-template,
        ng-class="{'component-filter': vm.options.filter,\
                   'component-edit': ((vm.templates.edit && !vm.options.filter) || (vm.templates.filter && vm.options.filter)) && vm.regim === 'edit',\
                   'component-preview': vm.templates.preview && vm.regim === 'preview'}")
    //-- without templates
    //-- filter or edit default template
    .component-edit(
        ng-if="((!vm.templates.edit && !vm.options.filter) || (!vm.templates.filter && vm.options.filter)) && vm.regim === 'edit'", 
        ng-class="{'component-filter': vm.options.filter}"
        ) 
        block content
    //-- preview default template
    .component-preview(ng-if="!vm.templates.preview && vm.regim === 'preview'") 
        .loader-search-wrapper(data-ng-show="vm.loadingData")
                    .loader-search {{'LOADING' | translate}}
        span(ng-bind="::vm.previewValue", data-ng-show="!vm.loadingData", ng-if = "!vm.multiple")
        div(ng-repeat="value in vm.previewValue track by $index", data-ng-show="!vm.loadingData", ng-if = "vm.multiple")
            span(ng-bind="value")
    include ../../template/errorField/errorField
    