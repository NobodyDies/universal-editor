.field-wrapper(data-ng-class="className")
    div(data-ng-class="!vm.isArray ? 'row' : '' ")
        .field-name-label.col-lg-6.col-md-6.col-sm-5.col-xs-4(data-ng-if="!vm.isArray")
            .field-hint(data-ng-if="vm.hint")
                .hint-text {{vm.hint}}
            span(data-ng-class="vm.required ? 'editor-required' : '' ") {{vm.fieldDisplayName}}:
        .field-element
    .field-error-wrapper(data-ng-if="!vm.isArray")
        .error-item.alert.alert-danger(data-ng-repeat="err in vm.error track by $index") {{err}}