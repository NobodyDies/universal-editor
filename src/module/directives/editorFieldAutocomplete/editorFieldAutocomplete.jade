div
    .col-lg-2.col-md-2.col-sm-3.col-xs-3
        .autocomplete-input-wrapper.form-control(
            data-ng-show="vm.preloadedData && vm.selectedValues.length < vm.maxItemsCount",
            data-ng-class='{"active" : vm.isActivePossible}',
            data-ng-click="inputFocus()"
            )
            .autocomplete-item(data-ng-repeat="acItem in vm.selectedValues", data-ng-show="vm.preloadedData") {{acItem[vm.field_search]}}
                span.remove-from-selected(data-ng-click="vm.removeFromSelected(acItem)", data-ng-if="!vm.readonly") Ã—
            input.autocomplete-field-search(
                type="text",
                ng-disabled="vm.readonly",
                data-ng-model="vm.inputValue",
                data-ng-focus="vm.focusPossible(true)",
                data-ng-blur="vm.focusPossible(false)",
                size="{{vm.sizeInput}}",
                data-ng-style='vm.classInput'
                )
            .loader-search-wrapper(data-ng-show="vm.searching")
                .loader-search {{'LOADING' | translate}}
            .possible-values.possible-autocomplete.active.possible-bottom(
                data-ng-if="!vm.readonly && (vm.possibleValues.length > 0)",
                )
                .possible-scroll
                    .possible-value-item(data-ng-repeat="possible in vm.possibleValues", data-ng-mouseover="vm.activeElement = $index", data-ng-click="vm.addToSelected(possible)", data-ng-class="vm.activeElement == $index ? 'active' : ''") {{possible[vm.field_search]}}
